{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist/types",
    "baseUrl": ".",
    "paths": {
      "*.ts": ["*"]
    },
  },
  "include": [
    "./mod.ts",
    "src/*.ts"
  ]
}
