  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "noEmit": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "*.ts": ["*"]
    }
  }
}
